<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.przem_jaworski.cooktheege">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SoftEggActivity"
            android:label="@string/soft_egg" />
        <activity
            android:name=".HalfSoftEggActivity"
            android:label="@string/half_soft_egg" />
        <activity
            android:name=".HardEggActivity"
            android:label="@string/hard_egg" />
        <activity
            android:name=".TshirtEggActivity"
            android:label="@string/in_tshirt_egg" />
        <activity android:name=".NotificationActivity" />
        <activity android:name=".BeforeSoftEggActivity" />
        <activity android:name=".BeforeHalfSoftEggActivity" />
        <activity android:name=".BeforeHardEggActivity" />
        <activity android:name=".BeforeTshirtEggActivity"></activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>